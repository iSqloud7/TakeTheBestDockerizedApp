@model IEnumerable<TakeTheBest_Project.Models.FoodCategory>

@{
    ViewBag.Title = "BreakfastView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="mt-5">
    <h2 id="breakfast-page">《《 Појадок 》》</h2>
</div>

<div class="center mt-3">
    <span id="add-breakfast">
        @if (User.IsInRole("Administrator"))
        {
            @Html.ActionLink("➢【Додади појадок!】", "Create", null, new { @class = "link-css" })
        }
    </span>
</div>

<div class="mt-5">
    <table id="breakfast-table" class="table">
        <thead>
            <tr class="titles">
                <th>
                    @Html.DisplayNameFor(model => model.categoryName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.categoryDescription)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.categoryIngredients)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.categoryOrigin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.categoryRating)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.categoryPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.categoryImage)
                </th>
                <th></th><th></th><th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr class="data">
                    <td id="id_to_details">
                        @*@Html.DisplayFor(modelItem => item.categoryName)*@
                        <a href="@Url.Action("Details", new { id = item.categoryID })">@item.categoryName</a>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.categoryDescription)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.categoryIngredients)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.categoryOrigin)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.categoryRating)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.categoryPrice)
                    </td>
                    <td>
                        @*@Html.DisplayFor(modelItem => item.categoryImage)*@
                        <img class="image mt-2" src="@item.categoryImage" alt="Breakfast Image!" style="max-width: 100px; max-height:100px" />
                    </td>
                    <td>
                        @if (User.IsInRole("Administrator"))
                        {
                            @Html.ActionLink("Ажурирај!", "Edit", new { id = item.categoryID }, new { @class = "crud-buttons" })
                        }
                    </td>
                    <td>
                        @Html.ActionLink("Детали!", "Details", new { id = item.categoryID }, new { @class = "crud-buttons" })
                    </td>
                    <td>
                        @if (User.IsInRole("Administrator"))
                        {
                            @Html.ActionLink("Избриши!", "Delete", new { id = item.categoryID }, new { @class = "crud-buttons" })
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts
{
    <script>
        $(document).ready(function () {
            $("#breakfast-table").DataTable({
                language: {
                    paginate: {
                        previous: "《 Претходна ",
                        next: " Следна 》"
                    }
                }
            });
        });
    </script>
}

