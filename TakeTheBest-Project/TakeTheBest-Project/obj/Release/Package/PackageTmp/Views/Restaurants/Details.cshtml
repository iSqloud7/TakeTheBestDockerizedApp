    }
    .dl-horizontal {
        text-align: center;
    }
    .dl-horizontal dt {
        color: saddlebrown;
        font-size: 20px;
        letter-spacing: -1.5px;
        display: inline;
        border: 3px solid gray;
        background-color: antiquewhite;
        border-radius: 5px;
        letter-spacing: 2.5px;
    }
    .dl-horizontal dd {
        color: wheat;
        font-size: 15px;
        font-weight: bold;
    }
    .dl-horizontal dd:hover {
