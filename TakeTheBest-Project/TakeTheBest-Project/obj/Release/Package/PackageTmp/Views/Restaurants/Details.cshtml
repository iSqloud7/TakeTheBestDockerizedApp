@model TakeTheBest_Project.Models.Restaurant

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="center mt-4">
    <span id="details-restaurant">⋟【Информации за ресторанот!】⋞</span>
</div>

<div class="menu center mt-3">
    <span>
        <button><a class="menu-link" href="@Url.Action("Index", "Menus")"><img class="icon" src="~/ProjectImages/menu.jpg" /> 》》》【Menu】</a></button>
    </span>
</div>


<div class="info mt-4">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.restaurantName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.restaurantName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.restaurantAddress)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.restaurantAddress)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.restaurantRating)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.restaurantRating)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.restaurantImage)
        </dt>

        <dd>
            <img class="image mt-2" src="@Model.restaurantImage" alt="Restaurant Image!" style="max-width: 100px; max-height:100px" />
            @*@Html.DisplayFor(model => model.restaurantImage)*@
        </dd>

        <dt>Гости во ресторанот:</dt>
        <dd>
            <div class="costumers mt-1">
                <ul class="list">
                    @foreach (var customer in Model.Customers)
                    {
                        @*<li>@Html.ActionLink($"{customer.customerName} {customer.customerSurname} {customer.customerImage}", "Details", "Customers", new { ID = customer.customerID }, null)</li>*@
                        <li>
                            <a class="link" href="@Url.Action("Details", "Customers", new { ID = customer.customerID })">
                                <div class="card">
                                    <div class="identity">
                                        @customer.customerName @customer.customerSurname
                                    </div>

                                    <div class="photo">
                                        <img src="@customer.customerImage" alt="Customer Image" style="max-width: 30px; max-height:30px; border: 1px solid antiquewhite; border-radius: 10px;" />
                                    </div>
                                </div>
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.restaurantDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.restaurantDescription)
        </dd>

    </dl>
</div>

<div class="center mt-5">
    <div class="form-actions mt-3">
        <span class="edit-button">
            @if (User.IsInRole("Administrator") || User.IsInRole("Developer"))
             {
                @Html.ActionLink("Измени податоци!", "Edit", new { id = Model.restaurantID }, new { @class = "btn btn-light" })
             }
        </span>
    </div>

    <div class="form-actions mt-2">
        <span class="back-button btn btn-light">
            @Html.ActionLink("《 Назад до почетна!", "Index", null, new { @class = "link-css" })
        </span>
    </div>

</div>

